{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <div class="row">
            {% for trailer in trailers %}
                <div class="col-3 py-3">
                    <div class="card h-100">
                        <img class="card-img-top" src="{{ trailer.link }}/images/background.jpg" alt="{{ trailer.title }}">
                        <div class="card-body">
                            <a href="/trailer/{{ trailer.slug }}">
                                <h5 class="card-title">{{ trailer.title }}</h5>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
